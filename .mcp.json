{
  "mcpServers": {
    "stripe": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@stripe/mcp", "--tools=all"],
      "env": {
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}"
      }
    },
    "firebase": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "firebase-tools@latest", "mcp"]
    }
  }
}
